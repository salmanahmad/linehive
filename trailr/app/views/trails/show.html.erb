<% content_for :title do %>
	LineHive: <%= @trail.caption %>
<% end  %>

<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "overview" %>
	<%= stylesheet_link_tag "form" %>
	<%# stylesheet_link_tag "hoverline" %>		
	<%# stylesheet_link_tag "timeline" %>		
	<%= stylesheet_link_tag "timeline" %>			
	<%= stylesheet_link_tag "show" %>
<% end %>

<% content_for :javascripts do %>
	
<%= javascript_include_tag "timeline.js" %>
<%= javascript_include_tag "jquery.ui.datepicker.js" %>
<%= javascript_include_tag "jquery.easing.1.3.js" %>
<%= javascript_include_tag "jquery.autoellipsis.js" %>
<%= javascript_include_tag "jquery.create.js" %>
<%= javascript_include_tag "jquery.mousewheel.js" %>

	
	
	
	<script type="text/javascript" charset="utf-8">

		$(function() {
			timeline.init(<%= @articles.to_json %>);
		});
	
	</script>
	
<% end %>

<div id="trail_header">
	
	<div id="trail_buttons">
		
	</div>
	
	
	<div id="edit">
		<%= button_to "Edit", {:controller => "trails", :action => "edit", :id => @trail.id}, {:class => "trail_button"} %>
	</div>
	<h2><%= @trail.caption %></h2>
	<div id="trail_subheading">
		Created on <b><%= @trail.created_at.strftime("%B %d, %Y at %I:%M%p") %></b>
		&nbsp; | &nbsp; Views <b><%= @trail.viewcount %></b>
		
		<% if @trail.user %>
			&nbsp; | &nbsp; Created by	<b><%= @trail.user.handle %></b>
		<% end %>
		

	</div>
	
</div>

<div style="margin-top:50px;margin-bottom:35px">

	<%= render :partial => "timeline", :locals => { :noedit => true } %>


</div>




<div id="urlbox">
	<input name="embed" value='<iframe frameborder="0" width="600" height="235" style="float:left;width:600px;height:235px;border:0px solid #808080" src="<%= url_for :controller => "trails", :action => "embed", :id => @trail.id, :only_path => false %>"></iframe>' 
	style="width:200px; float:right; margin-right:200px;" onclick="this.focus();this.select();">
	<span style="float:right; margin-right:5px; font-weight:bold">Embed</span>
	<input name="url" value="<%= url_for :controller => "trails", :action => "show", :id => @trail.id, :only_path => false %>" onclick="this.focus();this.select();" style="width:200px; float:right;margin-right:50px;">
	<span style="float:right;margin-right:5px; font-weight:bold;">URL</span>
</div>


<div class="clear">