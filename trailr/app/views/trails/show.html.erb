<% content_for :javascripts do %>
	<script type="text/javascript" charset="utf-8">

		function tab_click() {
			
			$("#trail_tab_box_header .selected").removeClass("selected");
			$(this).addClass("selected");
			
			
			$(".tab_panel").hide();
			var i = $(this).attr("href");
			$(i).show();
			return false;
		}

		$(function() {
			
			$(".tab_panel").hide();
			$(".tab_panel:first").show();
			$("#trail_tab_box_header a:first").addClass("selected");
			
			$(".tab").click(tab_click);
			
			$(".step").click(function() {
				$(".step.selected").removeClass("selected");
				$(this).addClass("selected");
				$("#story_overview").show();
			});
			
			$("#close").click(function() {
				$(".step.selected").removeClass("selected");
				$("#story_overview").hide();
			});
			
			$("#start_slide_show").click(function() {
				window.location = "fullscreen.html";
			});
			
		});
	</script>
	
<% end %>






		
