<html>
	<head>
		<title>Slideshow</title>
	  <link type="text/css" href="http://jqueryui.com/latest/themes/base/ui.all.css" rel="stylesheet" />

		<%= stylesheet_link_tag "global"  %>

		<%= stylesheet_link_tag "slideshow" %>
		<%= stylesheet_link_tag "form" %>
		<%= stylesheet_link_tag "timeline" %>
				
		<%= default_javascript %>
		<%= javascript_include_tag "jquery.simplemodal-1.3.3.js" %>
				
		<script type="text/javascript" charset="utf-8">
		
			function layout() {
				var size = $(document).height();
				size = size - $("#header").height() - $("#footer").height();
				$("#content_frame").height(size);
				
				
				var width = $(window).width();
				$("#content_frame").width(width);
			}
		
			$(function() {
				layout();
				$(window).bind('resize', layout);

				$("#share_button").click(function() {
					$("#share").modal();	
				});
				
				$("#share_close").click(function() {
					$.modal.close();					
				});
								

				
			});



			
		</script>
				



				
				
	</head>
	<body>
		<div id="header">
			

			
			<div id="logo">
				<%= link_to image_tag("logo.png", :height => "60%"), :controller => "home", :action => "index" %>
			</div>
			
			
			<div id="buttons">
				<%= button_to "Overview", {:controller => "trails", :action => "show"}, {:class => "trail_button"}  %>
				<input type="button" value="Share" id="share_button" class="trail_button">
			</div>
			
			<div id="title">
				Earthquake in Haiti
			</div>
			
			
		</div>
		
		<div id="share">
			<div id="share_close"></div>
			<h2>Share</h2>
			
			<div class="trail_box_contents">

				<div style="clear:both"></div>

				<p class="trail_form_row">
					<label class="label">URL:</label>
					<input class="content" style="width:190px" type="text">
					<br />							
				</p>	
				
				<p class="trail_form_row">
					<label class="label">Embed:</label>
								<label class="content">
									<textarea style="width:190px; height:50px;resize: none;"></textarea>
								</label>

					<br />							
				</p>
				<p class="trail_form_row">
					<label class="label">Share:</label>
					<label class="content">
						<a href="#">twitter</a>
						<a href="#">facebook</a>
						<a href="#">digg</a>
						<a href="#">more...</a>
					</label>
					<br />							
				</p>																													
			</div>
			
			
		</div>
		
		<div id="content">
			<iframe src="http://www.cnn.com" style="border:none;width:100%;" id="content_frame"></iframe>
		</div>
		
		<div id="footer">
			<div id="timeline">

					<div id="steps">

						<% 10.times do %>
							<div class="step">
								<div class="thumbnail">
									&nbsp;
								</div>
								<div class="source">cnn.com</div>
							</div>
						<% end %>

					</div>

			</div>
		</div>
	</body>
</html>