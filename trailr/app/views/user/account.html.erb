<div class="equal_columns">	
	<div class="left" >
		<h2>Published Timelines</h2>
		<ul>		
			<% for @trail in @trails %>
				<li><%= link_to @trail.caption, :controller => "trails", :action => "show", :id => @trail.id %></li>
				<br>
			<% end %>
		</ul>
		<% if @trails.size == 0 %>
			<p>You have not created any timelines yet. Start one <%= link_to "here", :controller => 'trails', :action => 'new' %>.</p>
		<% end %>
	</div>

	<div class="right">
		<h2>Timeline Drafts</h2>
		
		<ul>		
			<% for @draft in @drafts %>
				<li>
					<% caption = @draft.caption %>
					<% caption.strip! %>
					<% if caption == "" then caption = "Untitled" end %>
					<%= link_to caption, :controller => "trails", :action => "draft", :id => @draft.id  %>
					(saved at <%= @draft.updated_at %>)
				</li>
				<br>
			<% end %>
		</ul>
		<% if @drafts.size == 0 %>
			<p>You do not have any drafts. To save a draft, click the 'Save Draft' button on the create timeline page. Try it out now: <%= link_to "Create Timeline", :controller => 'trails', :action => 'new' %>.</p>
		<% end %>
		
		
		
	</div>
	
	<div class="clear"></div>
	
</div>

