<% content_for :title do %>
	LineHive: Your Account
<% end %>

<% content_for :stylesheets do %>	
	<%= stylesheet_link_tag "form" %>	
	<%= stylesheet_link_tag "account" %>	
<% end %>


<div class="account" style="overflow:hidden;">	

	<div class="right" style="margin-bottom:-2000px;padding-bottom:2000px;height=200px">
		<h1>Timelines</h1>
		See more...
		<br><br><br><br>
	</div>
	
	<% if current_user %>
	<div class="left" style="margin-bottom:-2000px;padding-bottom:2000px">
		<h1>Account Information</h1>
				
		<h3>General Information</h3>
		
		<% form_tag :controller => :user, :action => :process_edit do %>
			
			<fieldset>	
			<p>
				<label>Handle</label>
				<%= text_field :user, :handle %>
				<span class="clear"></span>
			</p>

			<p>
				<label>Email</label>
				<%= text_field :user, :email %>
				<span class="clear"></span>
			</p>

			<p>
				<label>Email</label>
				<%= text_field :customer, :email %>
				<span class="clear"></span>
			</p>

			<p>
				<label>New Password</label>
				<%= password_field_tag :password, {}, :size => 30 %>
				<span class="clear"></span>
			</p>

			<p>
				<label>Repeat Password</label>
				<%= password_field_tag :password2, {}, :size => 30 %>
				<span class="clear"></span>
			</p>
			
			<div class="input">
				<%= submit_tag "Save Changes" %>				
			</div>
			
			</fieldset>		
			
				
		<% end %>

	</div>
	<% end %>
	<div class="clear">
		&nbsp;
	</div>
	
</div>

