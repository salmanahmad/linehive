<% content_for :title do %>
	LineHive: Your Account
<% end %>

<% content_for :stylesheets do %>	
	<%= stylesheet_link_tag "form" %>	
	<%= stylesheet_link_tag "account" %>	
<% end %>


<div class="account" style="overflow:hidden;">	

	<div class="right" style="margin-bottom:-2000px;padding-bottom:2000px;height=200px">
		<h1>Most Recent Timelines</h1>
		<% count = 0 %>
		<ul>
		
		<% for @trail in @recent_trails %>
			<% count += 1 %>
			<% url = url_for :controller => "trails", :action => "show", :id => @trail.id, :only_path => false %>
			<li><a href="<%= url %>" onclick="window.open('<%= url %>'); return false;" target="_blank"><%= @trail.caption %></a></li><br>
		<% end %>
		</ul>
		<% if count == 0 %>
			<p>You have not created any timelines yet. Start one <%= link_to "here", :controller => 'trails', :action => 'new' %></p>.
		<% end %>
		<br><br><br><br>
	</div>
	
	<% if current_user %>
	<div class="left" style="margin-bottom:-2000px;padding-bottom:2000px">
		<h1>Account Information</h1>
				
		<h3>General Information</h3>
		
		<% form_tag :controller => :user, :action => :process_edit do %>
			
			<fieldset>	
			<p>
				<label>Username</label>
				<%= text_field :user, :handle %>
				<span class="clear"></span>
			</p>

			<p>
				<label>Email</label>
				<%= text_field :user, :email %>
				<span class="clear"></span>
			</p>
			
			<p>
				<label>New Password</label>
				<%= password_field_tag :password, {}, :size => 30 %>
				<span class="clear"></span>
			</p>

			<p>
				<label>Repeat Password</label>
				<%= password_field_tag :password2, {}, :size => 30 %>
				<span class="clear"></span>
			</p>
			
			<div class="input">
				<%= submit_tag "Save Changes" %>				
			</div>
			
			</fieldset>		
			
				
		<% end %>

	</div>
	<% end %>
	<div class="clear">
		&nbsp;
	</div>
	
</div>

