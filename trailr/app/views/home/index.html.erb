<% content_for :title do %>
	linehive
<% end %>

<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "new" %>
	<%= stylesheet_link_tag "form" %>	
	<%= stylesheet_link_tag "overview" %>	
	<%= stylesheet_link_tag "timeline" %>	
	<%= stylesheet_link_tag "smoothness/jquery.ui.datepicker.css" %>	
<% end %>


<% content_for :javascripts do %>

<%= javascript_include_tag "timeline.js" %>
<%= javascript_include_tag "jquery.ui.datepicker.js" %>

<% end %>



<h2>Popular Timelines <span style="font-size:12px; font-weight:normal">
<div class="space_10"></div>
<fieldset>
	<div class="small_columns">
		<div class="maincol">
			<div style="float:left;width:600px;height:235px;border:0px solid #808080"> 
				<iframe frameborder="0" width="600" height="235" src="/embed/3"></iframe> 
			</div> 
			<div style="float:left; width:600px; height:235px;border:0px solid #808080"> 
				<iframe frameborder="0" width="600" height="235" src="/embed/1"></iframe> 
			</div> 			
		</div>
		<div class="sidecol">
			<div class="round_box" style="margin-top:15px">
				<h3>What is LineHive?</h3>
				<b>Create</b> a timeline by pasting links.<br>
				<b>Share</b> the URL with others; <b>embed</b> it anywhere.<br>
				<b>Crowdsource</b> news exploration.<br><br>
				
				<h3>What's new?</h3>
				<b>Date time editing</b> for timeline creation.<br>
				<b>Jetpack</b> authoring extension for firefox.<br>
				Follow us on <b><a href="http://twitter.com/linehive">Twitter</a></b>.<br><br>
				
				<h3>To come?</h3>
				<b>Search</b> by topics.<br>
				<b>Comment</b> on any timeline.<br>
				<b>API</b> for development clients.<br>
			</div>
		</div>
		<div class="clear"></div>
	</div>
	
</fieldset>
