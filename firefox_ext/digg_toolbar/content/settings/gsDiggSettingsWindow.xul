<?xml-stylesheet type="text/css" href="chrome://global/skin/" ?>
<?xml-stylesheet type="text/css"
  href="chrome://browser/skin/preferences/preferences.css" ?>
<?xml-stylesheet type="text/css" href="chrome://digg/skin/gsDiggTree.css" ?>
<?xml-stylesheet type="text/css" href="chrome://digg-os/skin/gsDiggTree.css" ?>
<?xml-stylesheet type="text/css" href="chrome://digg/skin/gsDiggCheckbox.css" ?>
<?xml-stylesheet type="text/css"
  href="chrome://digg/skin/gsDiggSettingsWindow.css" ?>

<!DOCTYPE prefwindow SYSTEM "chrome://digg/locale/gsDiggLocale.dtd">

<prefwindow id="gs-digg-settings-window"
  title="&gs.digg.settings.window.title;"
  buttons="accept, cancel"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <prefpane>
    <preferences>
      <preference id="gs-digg-settings-notify-friendsActivity"
        name="extensions.digg.notify.friendsActivity" type="bool"/>
      <preference id="gs-digg-settings-info-username"
        name="extensions.digg.username" type="string"/>
      <preference id="gs-digg-settings-notification-autohide"
        name="extensions.digg.notification.autohide" type="int" />
      <preference id="gs-digg-settings-open-links"
        name="extensions.digg.open.links" type="int" />
      <preference id="gs-digg-settings-notification-type"
        name="extensions.digg.notification.type" type="int"/>
      <preference id="gs-digg-settings-notification-style"
        name="extensions.digg.notification.style" type="int"/>
      <preference id="gs-digg-settings-notify-news"
        name="extensions.digg.notify.news" type="bool"/>
      <preference id="gs-digg-settings-notify-videos"
        name="extensions.digg.notify.videos" type="bool"/>
      <preference id="gs-digg-settings-notify-images"
        name="extensions.digg.notify.images" type="bool"/>
      <preference id="gs-digg-settings-notify-container-list"
        name="extensions.digg.notify.container.list" type="string"/>
      <preference id="gs-digg-settings-notify-topic-list"
        name="extensions.digg.notify.topic.list" type="string"/>
      <preference id="gs-digg-settings-notify-digg-count"
        name="extensions.digg.notify.diggCount" type="int"/>
      <preference id="gs-digg-settings-notification-display-time"
        name="extensions.digg.notification.displayTime" type="int"/>
      <preference id="gs-digg-settings-buttons-place"
        name="extensions.digg.buttons.place" type="int"/>
    </preferences>

    <groupbox>
      <caption>
        <label value="&gs.digg.settings.recentlyPopular.label;"/>
      </caption>
      <hbox id="gs-digg-notifications-box">
        <vbox>
          <checkbox label="&gs.digg.settings.notify.news.label;"
            id="gs-digg-settings-notify-news-checkbox"
            preference="gs-digg-settings-notify-news"/>
          <checkbox label="&gs.digg.settings.notify.videos.label;"
            id="gs-digg-settings-notify-videos-checkbox"
            preference="gs-digg-settings-notify-videos"/>
          <checkbox label="&gs.digg.settings.notify.images.label;"
            id="gs-digg-settings-notify-images-checkbox"
            preference="gs-digg-settings-notify-images"/>
        </vbox>
        <vbox flex="1">
          <gsdiggtree id="gs-digg-settings-topics-tree" flex="1" />
        </vbox>
      </hbox>
    </groupbox>

    <spacer class="gs-digg-settings-spacer" />

    <groupbox>
      <caption>
        <checkbox id="gs-digg-settings-friendsActivity-checkbox"
          label="&gs.digg.settings.friendsActivity.label;"
          preference="gs-digg-settings-notify-friendsActivity"
          oncommand="GlaxChrome.Digg.SettingsWindow.onFriendsActivityChange();" />
      </caption>
      <hbox align="center">
        <label value="&gs.digg.settings.username.textbox.label;"/>
        <textbox id="gs-digg-settings-username-textbox"
          preference="gs-digg-settings-info-username" size="25"/>
        <label value="&gs.digg.settings.username.comment.label;"
          class="gs-digg-settings-username-comment" />
      </hbox>
    </groupbox>

    <spacer class="gs-digg-settings-spacer" />

    <grid>
      <columns>
        <column flex="1"/>
        <column flex="1"/>
        <column flex="1"/>
      </columns>
      <rows>
        <row>
          <label value="&gs.digg.settings.autohide.label;"/>
          <label value="&gs.digg.settings.openLinks.label;"/>
          <label value="&gs.digg.settings.notificationType.label;"/>
        </row>
        <row>
          <menulist preference="gs-digg-settings-notification-autohide">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.autohide.type1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.autohide.type2.label;"/>
              <menuitem value="2"
                label="&gs.digg.settings.autohide.type3.label;"/>
              <menuitem value="3"
                label="&gs.digg.settings.autohide.type4.label;"/>
            </menupopup>
          </menulist>
          <menulist preference="gs-digg-settings-open-links">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.openLinks.type1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.openLinks.type2.label;"/>
              <menuitem value="2"
                label="&gs.digg.settings.openLinks.type3.label;"/>
            </menupopup>
          </menulist>
          <menulist preference="gs-digg-settings-notification-type">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.notificationType.type1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.notificationType.type2.label;"/>
              <menuitem value="2"
                label="&gs.digg.settings.notificationType.type3.label;"/>
            </menupopup>
          </menulist>
        </row>
        <row>
          <label value="&gs.digg.settings.displayTime.label;"/>
          <label value="&gs.digg.settings.notify.diggCount.label;"/>
          <label value="&gs.digg.settings.notificationStyle.label;"/>
        </row>
        <row>
          <menulist preference="gs-digg-settings-notification-display-time">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.displayTime.time1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.displayTime.time2.label;"/>
              <menuitem value="2"
                label="&gs.digg.settings.displayTime.time3.label;"/>
              <menuitem value="3"
                label="&gs.digg.settings.displayTime.time4.label;"/>
              <menuitem value="4"
                label="&gs.digg.settings.displayTime.time5.label;"/>
              <menuitem value="5"
                label="&gs.digg.settings.displayTime.time6.label;"/>
            </menupopup>
          </menulist>
          <menulist preference="gs-digg-settings-notify-digg-count">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.notify.diggCount.option1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.notify.diggCount.option2.label;"/>
              <menuitem value="2"
                label="&gs.digg.settings.notify.diggCount.option3.label;"/>
              <menuitem value="3"
                label="&gs.digg.settings.notify.diggCount.option4.label;"/>
              <menuitem value="4"
                label="&gs.digg.settings.notify.diggCount.option5.label;"/>
              <menuitem value="5"
                label="&gs.digg.settings.notify.diggCount.option6.label;"/>
              <menuitem value="6"
                label="&gs.digg.settings.notify.diggCount.option7.label;"/>
            </menupopup>
          </menulist>
          <menulist preference="gs-digg-settings-notification-style">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.notificationStyle.style1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.notificationStyle.style2.label;"/>
            </menupopup>
          </menulist>
        </row>
        <row>
          <label value="&gs.digg.settings.buttonsPlace.label;"/>
        </row>
        <row>
          <menulist preference="gs-digg-settings-buttons-place">
            <menupopup>
              <menuitem value="0"
                label="&gs.digg.settings.buttonsPlace.option1.label;"/>
              <menuitem value="1"
                label="&gs.digg.settings.buttonsPlace.option2.label;"/>
            </menupopup>
          </menulist>
        </row>
      </rows>
    </grid>

    <spacer class="gs-digg-settings-spacer" />
    <spacer class="gs-digg-settings-spacer" />

  </prefpane>

  <script type="application/x-javascript"
    src="chrome://digg/content/common/gsDiggCommon.js" />
  <script type="application/x-javascript"
    src="chrome://digg/content/settings/gsDiggSettingsWindow.js" />

</prefwindow>
